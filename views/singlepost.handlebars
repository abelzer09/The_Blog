<div>
  <article>
    <div >
      <h2>{{post.title}}</h2>
      <div>
        Posted by {{post.User.username}} on {{Post.dateCreated}}
      </div>
    </div>
    <div>
      {{post.body}}
    </div>
  </article>

  {{#if post.Comments}}
    <section ">
      <div>
        <h3>Comments</h3>
      </div>

      <div >
        {{#each post.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
             {{User.username}}, {{Post.dateCreated}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form>
    <div>
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input name="post-id" value="{{post.id}}" />
      <label>Comment</label>
      <textarea ></textarea>
      <button>Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>