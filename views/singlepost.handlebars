<div>
  <article>
    <div >
      <h2>{{post.title}}</h2>
      <div>
        Posted by {{post.User.username}} on {{Post.dateCreated}}
      </div>
    </div>
    <div>
      {{post.body}}
    </div>
  </article>

  {{#if post.Comments}}
    <section >
      <div>
        <h3>Comments</h3>
      </div>

      <div >
        {{#each post.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
             {{User.username}}, {{Post.dateCreated}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form class="comment">
    <div>
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input name="post-id" value="{{post.id}}" />
      <div class="mb-3">
        <label for="Textarea" class="form-label">Text goes here</label>
        <textarea class="form-control" id="newComment" rows="3"></textarea>
    </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>